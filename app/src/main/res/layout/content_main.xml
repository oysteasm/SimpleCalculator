<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.smith.oystein.simplecalculator.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#7f8c8d">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/numberField"
        android:background="#d9dbdb"
        android:autoText="true"
        android:textColor="#2c3e50"
        android:textSize="40dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=","
        android:id="@+id/commaBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/number0Btn"
        android:layout_alignTop="@+id/commaBtn"
        android:layout_toEndOf="@+id/commaBtn"
        android:textSize="25dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/equalBtn"
        android:layout_alignTop="@+id/number0Btn"
        android:layout_toEndOf="@+id/number0Btn"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/number1Btn"
        android:layout_above="@+id/commaBtn"
        android:layout_alignParentStart="true"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/number2Btn"
        android:layout_alignTop="@+id/number1Btn"
        android:layout_alignStart="@+id/number0Btn"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/number3Btn"
        android:layout_alignTop="@+id/number2Btn"
        android:layout_toEndOf="@+id/number0Btn"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/addBtn"
        android:layout_alignTop="@+id/number3Btn"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/minBtn"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/number4Btn"
        android:layout_above="@+id/number1Btn"
        android:layout_alignParentStart="true"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/number5Btn"
        android:layout_alignTop="@+id/number4Btn"
        android:layout_alignStart="@+id/number2Btn"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/number6Btn"
        android:layout_alignTop="@+id/number5Btn"
        android:layout_toEndOf="@+id/number2Btn"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/minBtn"
        android:layout_alignTop="@+id/number6Btn"
        android:layout_toEndOf="@+id/number3Btn"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/number7Btn"
        android:layout_above="@+id/number4Btn"
        android:layout_alignParentStart="true"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/number8Btn"
        android:layout_alignTop="@+id/number7Btn"
        android:layout_alignStart="@+id/number5Btn"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/number9Btn"
        android:layout_alignTop="@+id/number8Btn"
        android:layout_toEndOf="@+id/number5Btn"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:id="@+id/multBtn"
        android:layout_alignTop="@+id/number9Btn"
        android:layout_toEndOf="@+id/number6Btn"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/divBtn"
        android:textSize="25dp"
        android:layout_above="@+id/number8Btn"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/multBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;-"
        android:id="@+id/backBtn"
        android:textSize="25dp"
        android:layout_alignTop="@+id/divBtn"
        android:layout_alignEnd="@+id/number9Btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/CBtn"
        android:textSize="25dp"
        android:layout_alignTop="@+id/backBtn"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/backBtn" />

</RelativeLayout>
